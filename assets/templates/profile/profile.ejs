<div class="text-center">
	<h1 id="username"><%=user.username%></h1>
	<div class="row">
		<p class="wins col-md-2 col-md-offset-3">Wins: <%=wins%></p>
		<p class="losses col-md-2">Losses: <%=losses%></p>
		<p class="stalemates col-md-2">Stalemates: <%=stalemates%></p>
	</div>
	<div>
		<h3>Recent Matches</h3>
		<table class="table table-striped table-hover">
			<tr>
				<td>
					Light Player
				</td>
				<td>
					Dark Player
				</td>
				<td>
					Result
				</td>
			</tr>
			<%_.each(matches, function(match){%>
				<tr>
					<td>
						<a href="#" class="username" user-id=<%=match.lightPlayer.id%>> 
							<%=match.lightPlayer.username%>
						</a>
					</td>
					<td>
						<a href="#"class="username" user-id=<%=match.darkPlayer.id%>> 
							<%=match.darkPlayer.username%>
						</a>
					</td>
					<td>
						<%if(match.winner<=0){%>
							<span>Stalemate</span>
						<%}else if(match.winner.id == user.id){%>
							Won
						<%}else{%>
							Lost
						<%}%>
					</td>
				</tr>
			<%});%>
		</table>
	</div>
</div>