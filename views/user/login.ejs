<div class="well user-form">
	<form class="form">
		<fieldset>
			<legend><h2>Login </br><small>Don't have an account? Sign up <a href="/register">here</a>.</small></h2></legend>
		    <div class="form-group">
		        <label for="login-username">Username</label>
		        <input class="form-control" type="text" id="login-username" placeholder="Username">
		    </div>
		    <div class="form-group">
		        <label for="login-password">Password</label>
		        <input class="form-control" type="password" id="login-password" placeholder="Password">
		    </div>
		    <button type="button" class="btn btn-lg btn-primary" id='login-button'>Sign in</button>
		</fieldset>
	</form>
</div>
